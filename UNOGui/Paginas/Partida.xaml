    <Page.Background>
        <ImageBrush ImageSource="/Imagenes/RecursosTablero/fondoMesa.jpg" Stretch="UniformToFill" />
    </Page.Background>

    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
