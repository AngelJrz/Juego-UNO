            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <StackPanel HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Jugador en turno: " Style="{StaticResource ContenidoMensaje}" TextAlignment="Center"/>
                    <TextBlock x:Name="turnoActual" Text="" Style="{StaticResource TituloMensaje}" TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0">
                    <Image x:Name="cartaCentral" Height="120"  Width="120" Source="/Imagenes/RecursosTablero/BackCard.png"/>
                </Grid>


                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0">
                    <!--<Image Height="100"  Width="100" Source="/Imagenes/RecursosTablero/BackCard.png"/>
                    <Button Content="Toma carta" HorizontalAlignment="Left" Margin="10,112,0,-16.6" VerticalAlignment="Top" Width="75" Click="TomarCarta"/>-->
                    <Button Height="120"  Width="120" Click="TomarCarta">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <StackPanel>
                                                <Image Name="imagen" Source="/Imagenes/RecursosTablero/BackCard.png" Width="120" Height="120"/>
                                            </StackPanel>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" TargetName="imagen" Value="0.7"></Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
            

        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="1">
            
            <ScrollViewer HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Disabled" Margin="0,10,0,10">
                <Grid x:Name="manoJugador" HorizontalAlignment="Center" Cursor="Hand"></Grid>
            </ScrollViewer>
            

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <TextBlock Text="Mi puntaje: " Style="{StaticResource TextoContenido}"/>
                <TextBlock Text="120" Style="{StaticResource TextoContenido}" FontWeight="Regular"/>
            </StackPanel>
            
            <Button Content="UNO" Style="{StaticResource Button}" Margin="0,5,0,0"/>
            <Button Content="Salir" Style="{StaticResource Button}" Margin="0,5,0,0"/>
        </StackPanel>

