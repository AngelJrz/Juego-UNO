<Page x:Class="UNOGui.Paginas.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UNOGui.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Height="Auto" Width="Auto"
      WindowTitle="Inicio">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/imagenMenuPrincipal.jpg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <StackPanel>
            <TextBlock Text="Tabla de puntuaciones" Style="{StaticResource TituloStyle}" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>

            <ListView Height="400" Width="220" VerticalAlignment="Top" Margin="10" 
                      Background="Transparent" BorderBrush="Transparent" 
                      Name="tablaPuntaciones" IsHitTestVisible="False" 
                      AlternationCount="{Binding Count}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#0058EA" CornerRadius="10" Padding="10" Width="200">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TemplatedParent.(ItemsControl.AlternationIndex)}" FontSize="25" Foreground="Gold" FontWeight="Bold"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding}" Foreground="Gold" Style="{StaticResource TextoContenido}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource TextoContenido}">
                                            <Run Text="Puntaje: "/>
                                            <Run Text="10" FontWeight="Bold"/>
                                        </TextBlock>
                                        <TextBlock Margin="10,0" Style="{StaticResource TextoContenido}">
                                            <Run Text="Nivel: "/>
                                            <Run Text="3" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

       
    </Grid>
</Page>
