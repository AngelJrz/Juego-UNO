<Page x:Class="UNOGui.Paginas.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UNOGui.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Height="Auto" Width="Auto"
      WindowTitle="Inicio">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/imagenMenuPrincipal.jpg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <StackPanel>
            <TextBlock Text="Tabla de puntuaciones" Style="{StaticResource TituloStyle}" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>

            <ListView Height="300" Width="300" VerticalAlignment="Top" Margin="10" Background="Transparent" BorderBrush="Transparent">
                <ListViewItem>
                    <TextBlock Text="NIckname 1"/>
                </ListViewItem>

                <ListViewItem>
                    <TextBlock Text="NIckname 2"/>
                </ListViewItem>
            </ListView>
        </StackPanel>

       
    </Grid>
</Page>
