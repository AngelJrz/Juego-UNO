<Window x:Class="UNOGui.Ventanas.Juego"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNOGui.Ventanas"
        mc:Ignorable="d"
        Closing="RegresarMenuPrincipal"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Title="Juego" Height="500" Width="500" Icon="/Imagenes/logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="frameNavegacion" NavigationUIVisibility="Hidden" Grid.Column="0" DataContext="{Binding DataContext}"/>
    </Grid>
</Window>
